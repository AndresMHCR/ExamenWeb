<link rel="stylesheet"
      href="/bootstrap/css/bootstrap.css">

<div class ="container">
    <div class="row">
        <div class="col-sm-9">

            <div class="form-group row">
                <label for="busqueda" class="col-sm-2 col-form-label">Buscar</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="busqueda" placeholder="Buscar">
                </div>
            </div>

        </div>
        <div class="col-sm-3">

            <button
                    class="btn btn-outline-success btn-block ">

                Buscar

            </button>

        </div>
    </div>

    <table class="table table-hover animated slideInLeft">
        <thead>
        <tr>
            <!-- th -> table header -->
            <th width="20%">Nombre Evento</th>
            <th width="25%">Fecha Evento</th>
            <th width="25%">Accion</th>

        </tr>
        </thead>
        <tbody>
        <% arreglo.forEach( (evento)=> { %>
            <tr>
                <!-- td -> table detail -->
                <td><%= evento.nombreEvento %></td>
                <td><%= evento.fechaEvento %></td>
                <td>
                    <a href="/evento/detalle/<%= evento.id %>"
                       class="quitar-link">
                        <button
                                class="btn btn-outline-info btn-block espaciado-boton">
                            Ver
                        </button>
                    </a>
                </td>
            </tr>
        <% }) %>
        </tbody>


    </table>



</div>