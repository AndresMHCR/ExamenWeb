<%- include('header',{titulo:'Ingrediente'});%>

<% const existeMensaje = typeof mensaje !== "undefined" %>

<% if(existeMensaje){ %>
    <div class="<%= clase %>" role="alert">
            <span class="font-weight-bold">
                MENSAJE
            </span> : <%= mensaje %>
    </div>
<% } %>

<div class ="container">

    <form method="get" action="/ingrediente/inicio">
        <div class="row">
            <div class="col-sm-9">

                <div class="form-group row">
                    <label for="busqueda">Busqueda</label>

                    <input id="busqueda"
                           type="text"
                           name="busqueda"
                           class="form-control">
                </div>

            </div>
            <div class="col-sm-3">

                <button
                        class="btn btn-outline-success btn-block ">

                    Buscar

                </button>

            </div>
        </div>
    </form>
    <div class="row">
        <div class="col-sm-9">

        </div>
        <div class="col-sm-3">
            <a href="/ingrediente/crear-ingrediente?idComida=<%=idreferencia%>"
               class="quitar-link">

                <button class="btn btn-outline-success btn-block">

                    Agregar Ingrediente


                </button>
            </a>
        </div>
    </div>

    <table class="table table-hover animated slideInLeft">
        <thead>
        <tr>
            <!-- th -> table header -->
            <th width="20%">Nombre Ingrediente</th>
            <th width="10%">Cantidad</th>
            <th width="15%">Descrpcion de Preparacion</th>
            <th width="10%">Opcional</th>
            <th width="10%">Tipo</th>
            <th width="10%">Necesita Refrigeracion</th>
            <th width="25%">Accion</th>

        </tr>
        </thead>
        <tbody>
        <% arreglo.forEach( (ingrediente)=> { %>
            <tr>
                <!-- td -> table detail -->
                <td><%= ingrediente.nombreIngrediente %></td>
                <td><%= ingrediente.cantidad %></td>
                <td><%= ingrediente.descripcionPreparacion %></td>
                <td><%= ingrediente.opcional %></td>
                <td><%= ingrediente.tipoIngrediente %></td>
                <td><%= ingrediente.necesitaRefrigeracion %></td>
                <td>
                    <form action="/ingrediente/eliminar/<%= ingrediente.id %>" method="POST">
                        <!--<button type="button"> clickea sin problemas</button>
                        <button>Yo tambien envio informacion</button>
                        -->
                        <button class="btn btn-outline-danger btn-block espaciado-boton"
                                type="submit">
                            Eliminar
                        </button>
                    </form>
                    <a href="/ingrediente/actualizar-ingrediente/<%= ingrediente.id %>?idComida=<%=idreferencia%>"
                       class="quitar-link">
                        <button
                                class="btn btn-outline-info btn-block espaciado-boton">
                            Actualizar
                        </button>
                    </a>

                </td>
            </tr>
        <% }) %>
        </tbody>


    </table>



</div>
