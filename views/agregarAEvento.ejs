<%- include('header',{titulo:"Editar Evento"});%>
<div class ="container">

    <h1> Detalle evento <%= evento.nombreEvento %> </h1>
    <div class="row" >
        <div class="col-sm-3">
            <strong>Fecha: </strong><%= evento.fechaEvento %>
        </div>
        <div class="col-sm-3">
            <strong>Latitud: </strong><%= evento.latitud %>
        </div>
        <div class="col-sm-3">
            <strong>Longitud: </strong><%= evento.longitud %>
        </div>
        <div class="col-sm-3">
            <form action="/evento/registrar" method="GET">

                <button class="btn btn-outline-secondary btn-block espaciado-boton"
                        type="submit">
                    Regresar
                </button>
            </form>
        </div>
    </div>
    <div class="row">
    <div class="col-sm-6">
        <table class="table table-hover animated slideInLeft">
            <thead>
            <tr>
                <!-- th -> table header -->
                <th width="80%">Ingredientes Participantes</th>
                <th width="20%"></th>
            </tr>
            </thead>
            <tbody>
            <% evento.ingredientes.forEach( (ingrediente)=> { %>
                <tr>
                    <!-- td -> table detail -->
                    <td><%= ingrediente.nombreIngrediente %></td>
                    <!--<td>
                        <form action="/evento/editar/<%= evento.id %>?idIngrediente=<%= ingrediente.id%>" method="POST">

                            <button class="btn btn-outline-danger btn-block espaciado-boton"
                                    type="submit">
                                Quitar
                            </button>
                        </form>
                    </td>-->
                </tr>
            <% }) %>
            </tbody>
        </table>
    </div>
    <div class="col-sm-6">
        <table class="table table-hover animated slideInLeft">
            <thead>
            <tr>
                <!-- th -> table header -->
                <th width="80%">Ingredientes </th>
                <th width="20%"> </th>
            </tr>
            </thead>
            <tbody>
            <% ingredientes.forEach( (ingrediente)=> { %>
                <tr>
                    <!-- td -> table detail -->
                    <td><%= ingrediente.nombreIngrediente %></td>
                    <td>
                        <form action="/evento/editar/<%= evento.id %>?idIngrediente=<%= ingrediente.id%>" method="POST">

                            <button class="btn btn-outline-success btn-block espaciado-boton"
                                    type="submit">
                                Agregar
                            </button>
                        </form>
                    </td>
                </tr>

            <% }) %>
            </tbody>
        </table>
    </div>
    </div>
</div>