<%- include('header',{titulo:"Eventos"})%>

<div class="container">

    <form method="get" action="/evento/registrar">
    <div class="row">
        <div class="col-sm-9">

            <div class="form-group row">
                <label for="busqueda">Busqueda</label>

                <input id="busqueda"
                       type="text"
                       name="busqueda"
                       class="form-control">
            </div>

        </div>
        <div class="col-sm-3">

            <button
                    class="btn btn-outline-success btn-block ">

                Buscar

            </button>

        </div>
    </div>
    </form>

    <table class="table table-hover animated slideInLeft">
        <thead>
        <tr>
            <!-- th -> table header -->
            <th width="20%">Nombre Evento</th>
            <th width="25%">Fecha Evento</th>
            <th width="25%">Accion</th>

        </tr>
        </thead>
        <tbody>
        <% arreglo.forEach( (evento)=> { %>
            <tr>
                <!-- td -> table detail -->
                <td><%= evento.nombreEvento %></td>
                <td><%= evento.fechaEvento %></td>
                <td>
                    <a href="/evento/editar/<%= evento.id %>"
                       class="quitar-link">
                        <button
                                class="btn btn-outline-info btn-block espaciado-boton">
                            Ver
                        </button>
                    </a>
                </td>
            </tr>
        <% }) %>
        </tbody>


    </table>

</div>